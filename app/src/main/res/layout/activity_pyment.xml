<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#FFF"
    tools:context=".pyment.Pyment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
        >


    <androidx.cardview.widget.CardView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="15dp"
            android:text="Total Amount:(Tk)"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        </TextView>
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/total"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        </TextView>
        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/sendmoney"
            android:textSize="25dp"
            android:fontFamily="@font/andika"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        </TextView>
        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/bikash"
            android:textSize="25dp"
            android:fontFamily="@font/andika"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        </TextView>
        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/sendtext"
            android:textSize="20dp"
            android:fontFamily="@font/andika"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/pattran"
            >

        </TextView>
        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/details"
            android:textSize="20dp"
            android:fontFamily="@font/andika"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/pattran"
            >

        </TextView>
        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/order"
            android:textSize="20dp"
            android:fontFamily="@font/andika"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        </TextView>

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:hint="নাম্বার">

        </EditText>
        <TextView
            android:layout_marginTop="15dp"
            android:text="@string/address"
            android:textSize="15dp"
            android:fontFamily="@font/andika"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </TextView>
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"

            android:hint="ঠিকানা">

        </EditText>
        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/finalorder"
            android:textSize="15dp"
            android:fontFamily="@font/andika"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        </TextView>
        <Button
            android:id="@+id/order"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/send_otp"
            android:text="Order"
            >
        </Button>

        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/finalword"
            android:textSize="15dp"
            android:fontFamily="@font/andika"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        </TextView>
        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/call"
            android:textSize="15dp"
            android:fontFamily="@font/andika"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
        </TextView>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>