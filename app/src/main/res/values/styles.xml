<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/side_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/side_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/side_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/side_out_right</item>
    </style>


</resources>